.card.card__link(ng-click="$ctrl.selectProductCategory()")
  .flex
    .flex__col-8
      .text--uppercase.text--bold(ng-bind="::$ctrl.productCategory.attributes.name")
      %small(ng-bind="::$ctrl.productCategory.attributes.description")
    .flex__col
      %ul.tags-list.flex--end
        %li(ng-repeat="tag in ::$ctrl.productCategory.attributes.tag_list")
          %span.product-category-tag(ng-bind="::tag")
