.autocomplete
  %input.input(type="text" ng-model="$ctrl.input" ng-change="$ctrl.doChange($ctrl.input)" ng-keyup="$ctrl.onKeyup($event)")
  %ul(ng-if="$ctrl.isLoading")
    %li
      %i.fa.fa-fw.fa-spinner.fa-spin
      fetching . . .
  %ul(ng-if="!$ctrl.isLoading && $ctrl.items.length > 0")
    %li(ng-class="{'is-active': ($index === $ctrl.selectedIndex)}" ng-repeat="item in $ctrl.items track by $index" ng-click="$ctrl.doSelect(item)")
      %span(ng-bind="item.label")
