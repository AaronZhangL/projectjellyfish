%form(name="authForm" novalidate ng-submit="$ctrl.submitForm()")
  %server-messages.is-error(errors="$ctrl.serverErrors.pointers['/data/attributes']")
    %server-message(message="VALIDATION_ERROR")
  .control
    %server-messages.is-error.pull-right(errors="$ctrl.serverErrors.pointers['/data/attributes/email']")
      %server-message(message="VALIDATION_ERROR")
    %input.input(ng-model="$ctrl.user.email" placeholder="Enter your email" name="email" type="email" required)
  .control
    %server-messages.is-error.pull-right(errors="$ctrl.serverErrors.pointers['/data/attributes/password']")
      %server-message(message="VALIDATION_ERROR")
    %input.input(ng-model="$ctrl.user.password" placeholder="Enter your password" name="password" type="password" required)
  %button.button.is-primary(type="submit" ng-disabled="authForm.$invalid" ng-bind="$ctrl.button")
  %div(ng-if="$ctrl.message" ng-bind="$ctrl.message")
