%form(name="form" novalidate)
  .columns
    .column.is-half
      .control
        %label.label Message
        %textarea.textarea(name="description" placeholder="Optional: Reason for approval or denying the request." rows="3" ng-model="$ctrl.model.reason_message")
  .form__buttons
    %button.button.is-success(type="button" ng-if="::$ctrl.onApprove" ng-disabled="form.$invalid" ng-click="$ctrl.doApprove()") Approve
    %button.button.is-danger(type="button" ng-if="::$ctrl.onDeny" ng-disabled="form.$invalid" ng-click="$ctrl.doDeny()") Deny
    %button.button(type="button" ng-if="$ctrl.onCancel" ng-click="$ctrl.onCancel();") Cancel
