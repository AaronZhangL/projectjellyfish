.card.card__link(ng-click="$ctrl.select()")
  .flex
    .flex__col.flex__col--stunted
      %img.icon(ng-src="images/{{::$ctrl.productType.attributes.type}}.png")
    .flex__col-6
      .text--uppercase.text--bold(href="" ng-bind="::$ctrl.productType.attributes.name")
      %small(ng-bind="::$ctrl.productType.attributes.description")
    .flex__col
      %ul.tags-list.flex--end
        %li(ng-repeat="tag in ::$ctrl.productType.attributes.tag_list")
          %span.product-tag(ng-bind="::tag")
