.card.is-fullwidth
  .card-content
    %article.media
      %figure.media-left
        .image.is-64x64
          %img(ng-src="images/{{::$ctrl.product.attributes.type}}.png")
      .media-content
        .title.is-5
          %a(ng-if="$ctrl.onShow" ng-click="$ctrl.showProduct(product)" ng-bind="::$ctrl.product.attributes.name")
          %span(ng-if="!$ctrl.onShow" ng-bind="::$ctrl.product.attributes.name")
        %p.subtitle.is-6(ng-bind="::$ctrl.product.attributes.description")
        .level
          .level-left
            .level-item(ng-repeat="tag in ::$ctrl.product.attributes.tag_list")
              %span.tag.is-small.is-primary(ng-bind="::tag")
        %nav.level
          .level-left
            %price-info.level-item(object="$ctrl.product")

      .media-right
        %button.button.is-success(type="button" ng-if="::$ctrl.onAddToCart" ng-click="$ctrl.addToCart()") Add to cart
        %button.button.is-primary(type="button" ng-if="::$ctrl.onSelect" ng-click="$ctrl.selectProduct()") Select
        %button.button.is-primary(type="button" ng-if="::$ctrl.onUpdate" ng-click="$ctrl.updateProduct()") Update
        %button.button.is-danger(type="button" ng-if="::$ctrl.onDelete" ng-click="$ctrl.deleteProduct()") Delete
