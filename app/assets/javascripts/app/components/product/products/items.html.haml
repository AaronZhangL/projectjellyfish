.columns.is-multiline
  .column.is-half(ng-repeat="product in $ctrl.products track by product.id")
    .card.is-fullwidth
      .card-header
        .card-header-title
          .level(style="flex: 1")
            .level-left
              %span.level-item(ng-bind="::product.attributes.name")
            .level-right.flex-end
              %button.button.level-item.is-small.is-primary(type="button" ng-if="::$ctrl.onUpdate" ng-click="$ctrl.doEvent('Update', product)") Edit
              %button.button.level-item.is-small.is-danger(type="button" ng-if="::$ctrl.onDelete" ng-click="$ctrl.doEvent('Delete', product)") Delete
              %button.button.level-item.is-small.is-dark(type="button" ng-if="::$ctrl.onShow" ng-click="$ctrl.doEvent('Show', product)") View
      .card-content
        %article.media
          %figure.media-left
            .image.is-64x64
              %img(ng-src="images/{{::product.attributes.type}}.png")
          .media-content
            .subtitle.is-6(ng-bind="::product.attributes.description || 'No Description'")
            .level
              .level-left
                .level-item(ng-repeat="tag in ::product.attributes.tag_list")
                  %span.tag.is-small.is-primary(ng-bind="::tag")
        .level
          .level-left
            %price-info.level-item(object="product")
          .level-right.flex-end
            %button.button.level-item.is-small.is-success(type="button" ng-if="::$ctrl.onAddToCart" ng-click="$ctrl.doEvent('AddToCart', product)") Add to cart
            %button.button.level-item.is-small.is-success(type="button" ng-if="::$ctrl.onAddToProject" ng-click="$ctrl.doEvent('AddToProject', product)") Add to project
            %button.button.level-item.is-small.is-primary(type="button" ng-if="::$ctrl.onSelect" ng-click="$ctrl.doEvent('Select', product)") Select
            %compare-button(ng-if="$ctrl.comparable" item="product")
