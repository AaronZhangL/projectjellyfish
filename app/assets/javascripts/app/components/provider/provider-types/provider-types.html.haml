.columns.is-multiline
  .column.is-half(ng-repeat="provider in ::$ctrl.providerTypes track by provider.id")
    .card.is-fullwidth
      .card-content
        %article.media
          %figure.media-left
            .image.is-64x64
              %img(ng-src="images/{{::provider.attributes.type}}.png")
          .media-content
            .title.is-5
              %a(ng-if="$ctrl.onShow" ng-click="$ctrl.showProviderType(provider)" ng-bind="provider.attributes.name")
              %span(ng-if="!$ctrl.onShow" ng-bind="provider.attributes.name")
            %p.subtitle.is-6(ng-bind="provider.attributes.description")
            .level
              .level-left
                .level-item(ng-repeat="tag in ::provider.attributes.tag_list")
                  %span.tag.is-small.is-primary(ng-bind="::tag")
          .media-right
            %button.button.is-primary(type="button" ng-if="$ctrl.onSelect" ng-click="$ctrl.selectProviderType(provider)") Select
