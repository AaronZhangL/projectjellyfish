%form(name="form" novalidate)
  %div.label.has-text-right
    %span.is-required
    %small field is required
  .columns
    .column.is-half
      .control
        %label.label
          %span.is-required Name
        %input.input(type="text" name="name" ng-model="$ctrl.model.name" required)
      .control
        %label.label
          %span Description
        %textarea.textarea(name="description" rows="3" ng-model="$ctrl.model.description")
      .control
        %label.label
          %span Tags
        %tags-input(ng-model="$ctrl.tags")
    .column.is-half
      %div(ng-switch="$ctrl.model.type")
        %settings(ng-switch-when="cloud_forms/provider" property="credentials" item="$ctrl.provider" on-change="$ctrl.onChange($event)")

.columns
  .column
    %button.button.is-primary(type="button" ng-if="$ctrl.onCreate" ng-disabled="form.$invalid" ng-click="$ctrl.doCreate();") Create Provider
    %button.button.is-primary(type="button" ng-if="$ctrl.onUpdate" ng-disabled="form.$invalid" ng-click="$ctrl.doUpdate();") Save Changes
    %button.button.is-danger(type="button" ng-if="$ctrl.onDelete" ng-click="$ctrl.doDelete();") Delete Provider
    %button.button(type="button" ng-if="$ctrl.onCancel" ng-click="$ctrl.onCancel()") Cancel
