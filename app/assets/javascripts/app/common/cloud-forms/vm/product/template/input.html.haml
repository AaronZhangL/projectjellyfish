.control(ng-class="{'is-loading': $ctrl.isLoading}")
  %input.input.is-clickable(type="text" placeholder="click to select a template" readonly value="{{$ctrl.text}}" ng-click="$ctrl.openModal();")

%provider-data-modal{'ng-if':'$ctrl.isOpen',
  query:'$ctrl.query',
  'placeholder':'search templates',
  'table-settings': '$ctrl.tableSettings',
  'on-select':'$ctrl.doSelect($event)',
  'on-cancel':'$ctrl.isOpen = false;'} Available Templates
